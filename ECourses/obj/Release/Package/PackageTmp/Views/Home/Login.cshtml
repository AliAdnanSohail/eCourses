
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/jquery.datetimepicker.css" />
    <script src="~/Assets/js/jquery.js"></script>
    <title>Login</title>
</head>
<body>
    <div class="container col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" >

        @*<form class="form-signin" method="post" >*@
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
{
            <h1 class="form-signin-heading text-muted">Sign In</h1>
            <div class="form-group form-signin ">
                @*<input type="text" id="name" class="form-control" placeholder="Email address" required>*@
                @Html.TextBox("name",null,new {@class="form-control", placeholder="User Name" , @required="required" })
                </div>

            <div class="form-group form-signin  " >
                @*<input type="password" id="password" class="form-control" placeholder="Password" required>*@
               
            @Html.Password("password",null,new {@class="form-control",placeholder="Password", @required="required" })
             </div>
                @*<button class="btn btn-lg btn-primary btn-block" type="submit" onclick="location.href='@Url.Action("mainPanel", "Home")'">
                Sign In
            </button>*@
            <div class="col-xs-12 col-sm-3 col-md-3">
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="btn_login">
                    Sign In
                </button>
                </div>

}

    </div>
</body>
</html>
